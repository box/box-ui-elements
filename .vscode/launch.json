    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test single file",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "args": ["--runInBand", "${relativeFile}"],
            "runtimeArgs": ["--nolazy"],
            "env": {
                "NODE_ENV": "test"
            },
            "console": "internalConsole",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test all",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "args": ["--runInBand"],
            "runtimeArgs": ["--nolazy"],
            "env": {
                "NODE_ENV": "test"
            },
            "console": "internalConsole",
            "sourceMaps": true
        }
    ]
}
